# What image do we start from
FROM ubuntu:18.04

RUN apt-get update
RUN apt-get install -y build-essential
RUN apt-get install -y nano
RUN apt-get install -y vim

RUN apt-get install -y python3-pip
RUN apt-get install -y python3

RUN apt install -y snmp snmpd libsnmp-dev
RUN /usr/bin/python3 -m pip install --upgrade pip
RUN pip3 install python3-netsnmp
RUN apt-get install -y snmp-mibs-downloader

COPY ./MY-MIB.txt /usr/share/snmp/mibs/
COPY ./send-snmp.py /

ENTRYPOINT ["python3","/send-snmp.py"]
